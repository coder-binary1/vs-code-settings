{
  "workbench.colorTheme": "Learn with Sumit Theme",
  "editor.fontSize": 19,
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.minimap.enabled": false,
  "editor.fontLigatures": true, // Font ligatures are special visual representations of character combinations
  "editor.wordWrap": "on",
  // cursor
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.fontFamily": "\"FiraCode Nerd Font Mono\", Menlo",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  // config related to code formatting
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // config related to code formatting
  "editor.accessibilitySupport": "off",
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.stickyScroll.scrollWithEditor": false,
  "workbench.tree.enableStickyScroll": false,
  "editor.stickyScroll.enabled": false,
  "editor.linkedEditing": true,
  "chat.commandCenter.enabled": false,
  "workbench.iconTheme": "vscode-icons",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "peacock.affectActivityBar": false,
  "peacock.affectTitleBar": false,
  "javascript.updateImportsOnFileMove.enabled": "always"
}
